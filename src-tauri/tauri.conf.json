{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "win-control-center",
  "version": "1.1.0",
  "identifier": "com.yghf.win-control-center",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Control Center",
        "width": 360,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "visible": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/icon_white.png",
      "icons/icon_black.png"
    ]
  }
}